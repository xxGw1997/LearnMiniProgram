<!-- 1.view基本使用 -->
<view class="box">哈哈哈</view>
<view>呵呵呵</view>

<!-- 2.hover-class:当用户按下组件时,显示的样式 -->
<!-- 3.hover-stay-time:当用户松开后停留的时间 -->
<view class="box1" hover-class="hover-view" hover-stay-time="{{0}}">box1</view>

<!-- 4.hover-stop-propagation -->
<view class="foo" hover-class="foo-h">
  <view class="son" hover-class="son-h"  hover-stop-propagation></view>
</view>