<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<!-- 类似于span标签，独占一行,可使用\n来换行 -->
<text>Hello World\n</text>
<text>你好小程序\n</text>

<!-- 2.selectable:true -->
<!-- 默认情况下text中的文本长按是不能选中 -->
<text selectable='{{true}}'>Hello xxGw\n</text>
<text selectable>Hello xxGw\n</text>

<!-- 3.space:决定文本空格的大小 -->
<text >Hello ywx\n</text>
<!-- 普通空格大小 -->
<text space="nbsp">Hello ywx\n</text>
<!-- 半个中文字符大小 -->
<text space="ensp">Hello ywx\n</text>
<!-- 一个中文字符大小 -->
<text space="emsp">Hello ywx\n</text>

<!-- 4.decode属性:是否解码文本 -->
<text decode>5 &gt; 3</text>